<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/member/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/member/memberPage.css">
    <link rel="stylesheet" href="//apps.bdimg.com/libs/jqueryui/1.10.4/css/jquery-ui.min.css">
    <link href="https://www.jqueryscript.net/css/jquerysctipttop.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="/stylesheets/member/loginheader.css">
   <style>
      
    </style>
</head>

<body>
    <!-- navbar範圍 -->
    <div class="header" style="height: 80px; background-color: blanchedalmond;">
        <div id="demoUser"><%= sessionName %></div>
        <div><button id="logoutBtn" class="btn btn-outline-primary" onclick="logout()">登出</button></div>      
        <div><button id="loginBtn" class="btn btn-outline-info" >登入</button></div>      
    </div>
    <!-- container -->
    <div class="container main">
        <!-- 登入頁 -->
        <%- include('./share/dialog_login.ejs') %>
        <!-- 對話框製作 修改密碼 -->
        <%- include('./share/dialog_changePwd.ejs') %>
        <!-- 對話框製作 修改暱稱 -->
        <%- include('./share/dialog_changeNickName') %>
        <!-- 左邊功能選單 -->
        <div class="row">
            <div class="col-3 leftBar p-0">
                <div class="">
                    <div class="picArea mry-25 mx-auto">
                        <img class="memberImg " src="/images/rabbit_240x200.jpeg" alt="">
                    </div>
                    <div class="mry-25 d-flex justify-content-center"><button class="btn btnPic">上傳頭貼</button></div>
                </div>
                <hr class="hrTagLeft">
                <div class="mry-25">
                    <div class="btn-group-vertical w-100 leftItemList" role="group"
                        aria-label="Button group with nested dropdown">
                        <button type="button" class="btn btn-leftItem-main">
                            <a href="/member/memberPage" style="text-decoration: none;"><img class="leftBarIcon verticle_center"
                                    src="/images/U-info-w.svg" alt=""><span
                                    class="fs-20-main verticle_center">會員資料</span></a>
                        </button>
                        <button type="button" class="btn btn-leftItem">
                            <a href="/member/memberSchedules" style="text-decoration: none;"><img class="leftBarIcon verticle_center"
                                    src="/images/keep-b.svg" alt=""><span
                                    class="fs-20 verticle_center">景點收藏</span></a>
                        </button>
                        <button type="button" class="btn btn-leftItem">
                            <a href="/member/memberArticles" style="text-decoration: none;"><img class="leftBarIcon verticle_center"
                                    src="/images/U-article-b.svg" alt=""><span
                                    class="fs-20 verticle_center">我的文章</span></a>
                        </button>
                        <button type="button" class="btn btn-leftItem">
                            <a href="/member/memberOrders" style="text-decoration: none;"><img class="leftBarIcon verticle_center"
                                    src="/images/U-receipt-b.svg" alt=""><span
                                    class="fs-20 verticle_center">我的訂單</span></a>
                        </button>
                    </div>
                </div>
            </div>
            <!-- 資料內容 -->
            <div class="col-9 p-0">
                <div class="dataBasic text-center">基本資料</div>
                <div>
                    <hr class="hrTagRight mrx-50" />
                </div>
                <div class="mrx-25">
                    <div class="row rowBorder firstRow">
                        <div class="col-2 firstCol">帳號</div>
                        <!-- 資料置換處 -->
                        <div class="col-8 secCol">aabb123@gmail.com</div>
                        <div class="col-2"></div>
                    </div>

                    <div class="row rowBorder secondRow">
                        <div class="col-2 firstCol">密碼</div>
                        <!-- 資料置換處 -->
                        <div class="col-8 secCol">********</div>
                        <div class="col-2 thirdCol">
                            <button id="btnUpdatePwd" class="btn btnDowuiki">更改密碼</button>
                        </div>
                    </div>
                    <div class="row rowBorder thirdRow">
                        <div class="col-2 firstCol">暱稱</div>
                        <!-- 資料置換處 -->
                        <div class="col-8 secCol">喜羊羊</div>
                        <div class="col-2 thirdCol">
                            <button id="btnUpdateNickName" class="btn btnDowuiki">更改暱稱</button>
                        </div>
                    </div>
                    <div class="row rowBorder forthRow">
                        <div class="col-2 selfIntro">自介</div>
                        <div class="col-10 px-25">
                            <!-- 資料置換處 -->
                            <form class="" action="">
                                <div><textarea class="selfArea" name="" id="" cols="50" rows="8"
                                        placeholder="留下個性簽名吧~"></textarea></div>
                                <div><button class="btn btnDowuiki">送出</button></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div style="height: 200px; width: 100%; background-color: blanchedalmond; border:1px solid black"></div>
    <script src="/javascripts/member/jquery.js"></script>
    <script src="/javascripts/member/popper.min.js"></script>
    <script src="/javascripts/member/bootstrap.min.js"></script>
    <script src="/javascripts/member/jquery-ui.js"></script>
    <script src="/javascripts/member/login.js"></script>

    <script>
        // 登入頁dialog
        function dialogL() {
            $("#dialogL").dialog({
                width: 500,
                height: 500,
                modal: true,
            });    
        }
        // 點登入鈕時跳出登入頁
        $("#loginBtn").click(function(event){
            dialogL();
        })

        //修改密碼登入
          function dialog() {
            $("#dialog").dialog({
                width: 400,
                height: 350,
                modal: true,
            });    
        }
          function dialogS() {
            $("#dialogS").dialog({
                width: 300,
                height: 280,
                modal: true,
            });    
        }
    
        // 點下按鈕彈出改密碼
        $("#btnUpdatePwd").click(function (event) {
            dialog();
        });
        // 修改密碼dialog按OK後消失
        $(".btnCheck").click(function () {
            $("#dialog").dialog("close");
        });
        $("#btnUpdateNickName").click(function (event) {
            dialogS();
        })
        // 修改暱稱dialog按OK後消失
        $(".btnCheck").click(function () {
            $("#dialogS").dialog("close");
        });
      
    </script>
</body>

</html>